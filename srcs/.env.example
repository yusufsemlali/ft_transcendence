# ==============================================================================
# ft_transcendence: Esports Tournament Management System (ETMS)
# ==============================================================================

# --- Domain & App Configuration ---
DOMAIN_NAME=localhost
APP_NAME="Transcendence Tournament System"
APP_DESCRIPTION="The ultimate tournament platform for hobbyists and students."
NODE_ENV=development

# --- Database Configuration ---
DB_USER=ft_user
DB_PASSWORD=secret_password
DB_NAME=ft_transcendence
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@database:5432/${DB_NAME}

# --- Authentication & Security ---
JWT_SECRET=replace_this_with_a_long_random_string
JWT_EXPIRATION=7d
PASSWORD_SALT_ROUNDS=10

# --- OAuth 42 Configuration ---
FORTYTWO_CLIENT_ID=
FORTYTWO_CLIENT_SECRET=
FORTYTWO_CALLBACK_URL=https://${DOMAIN_NAME}:8080/api/auth/42/callback

# --- Esports / Social Integrations ---
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_CALLBACK_URL=https://${DOMAIN_NAME}:8080/api/auth/discord/callback

# --- Tournament Management Settings ---
TOTAL_MAX_PLAYERS=64
DEFAULT_MIN_PLAYERS=4
TOURNAMENT_COOLDOWN_MINUTES=15
MATCH_TIMEOUT_SECONDS=300

# --- Email Notifications ---
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=
FROM_EMAIL="noreply@ft-transcendence.com"

# --- Storage & Uploads ---
UPLOAD_DIR=/app/uploads
MAX_AVATAR_SIZE_MB=2

# --- Frontend specific ---
NEXT_PUBLIC_API_URL=https://${DOMAIN_NAME}:8080/api
INTERNAL_BACKEND_API_URL=http://ft_backend:3000/api

NEXT_PUBLIC_API_TIMEOUT=10000
